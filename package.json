{
  "name": "react-guide",
  "displayName": "React Guide",
  "description": "React functions guide",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "react-guide.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "react-guide.start_ext",
        "title": "Start the extension"
      },
      {
        "command": "react-guide.show_panel",
        "title": "Show the guide panel"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "true",
          "command": "react-guide.show_panel",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/markdown-it": "^13.0.7",
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.54.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.3.2"
  },
  "repository": {
    "url": "https://github.com/IIIphr/React-extension"
  },
  "publisher": "SepehrEbrahimi",
  "dependencies": {
    "markdown-it": "^14.0.0"
  }
}
